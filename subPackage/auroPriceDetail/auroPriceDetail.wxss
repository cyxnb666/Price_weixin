/* pages/pricingDetail.wxss */
page {
  height: 100%;
  width: 100%;
  --td-cell-title-color: #42AEFA !important;
  --td-cell-note-color: #333333 !important;
}

.table-body-item-box {
  display: flex;
  align-items: center;
}

.pricingDetail {
  height: calc(100vh - 190px) !important;
  width: 100%;
  background-color: #F2F2F2FF;
  padding: 20rpx;
  box-sizing: border-box;
}

.pricingDetail-container {
  background-color: #ffffff;
}

.margin-16 {
  margin: 16rpx;
}

.operation {
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  --td-button-primary-bg-color: #1989FA !important;
  --td-button-primary-border-color: #1989FA !important;
  --td-button-primary-outline-border-color: #1989FA !important;
  --td-button-primary-outline-color: #1989FA !important;
}

.operation-btn-box {
  width: calc(50% - 20rpx);
}

.operation-btn {
  width: 100%;
}

.custom-navbar {
  --td-navbar-color: #fff !important;
  --td-navbar-bg-color: #7393FF !important;
}

.pricingType {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;

}

.fruitDiameter,
.weight {
  width: 40%;
  border: 1px solid #E5E5E5;
  text-align: center;
  padding: 10rpx 0;
}

.fruitDiameter {
  border-top-left-radius: 40rpx;
  /* 高度的一半 */
  border-bottom-left-radius: 40rpx;
  /* 高度的一半 */
}

.weight {
  border-top-right-radius: 40rpx;
  /* 高度的一半 */
  border-bottom-right-radius: 40rpx;
  /* 高度的一半 */
}

.active-fruitDiameter {
  width: 40%;
  border: 1px solid #1989FA;
  text-align: center;
  padding: 10rpx 0;
  background-color: #1989FA;
  color: #ffffff;
  border-top-left-radius: 40rpx;
  /* 高度的一半 */
  border-bottom-left-radius: 40rpx;
  /* 高度的一半 */
}

.active-weight {
  width: 40%;
  border: 1px solid #1989FA;
  text-align: center;
  padding: 10rpx 0;
  background-color: #1989FA;
  color: #ffffff;
  border-top-right-radius: 40rpx;
  /* 高度的一半 */
  border-bottom-right-radius: 40rpx;
  /* 高度的一半 */
}

.table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.table-body {
  padding: 0 30rpx;
}

.table-header-item {
  color: #E7A927;
}

.table-body-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #F5F5F5;
  padding-bottom: 12rpx;
}

.tips {
  color: #E26F11;
  margin-bottom: 20rpx;
}

.btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  padding: 0 40rpx;
  color: white;
}

.delete-btn {
  background-color: #e34d59;
}

.category-table {
  width: 100%;
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.category-header {
  display: flex;
  background-color: #f5f5f5;
  font-weight: bold;
  border-bottom: 1px solid #eee;
}

.category-row {
  display: flex;
  border-bottom: 1px solid #eee;
}

.category-row:last-child {
  border-bottom: none;
}

.category-column {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status-text {
  cursor: pointer;
}

.status-completed {
  color: #1989FA;
}

.status-incomplete {
  color: #999999;
}

.dialog-message {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.title-with-icon {
  display: flex;
  align-items: center;
  color: #42AEFA;
}

.title-with-icon text {
  margin-right: 10rpx;
}

.category-option {
  padding: 10rpx 0;
}

.no-category-tip {
  text-align: center;
  color: #999;
  padding: 20rpx 0;
}

/* Status colors */
.status-2 {
  color: #999999; /* 待采价 - gray */
}

.status-3 {
  color: #ff9800; /* 暂存 - orange */
}

.status-5 {
  color: #1989FA; /* 已完成 - blue */
}

.popup-container {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.popup-container-title {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.popup-container-search {
  margin-bottom: 20rpx;
}

.popup-container-scroll {
  width: 100%;
  height: calc(100% - 300rpx);
  --td-radio-icon-checked-color: #1989FA !important;
}

.stall-radio-item {
  margin-bottom: 16rpx;
  padding: 12rpx;
  border-bottom: 1px solid #f0f0f0;
}

.popup-operation {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  gap: 20rpx;
  --td-button-primary-bg-color: #1989FA !important;
  --td-button-primary-border-color: #1989FA !important;
}

.popup-operation-btn {
  flex: 1;
}

.temp-btn {
  --td-button-primary-outline-border-color: #1989FA !important;
  --td-button-primary-outline-color: #1989FA !important;
}









/* 新增临时采价点对话框样式 */
.dialog-content {
  padding: 20rpx 0;
  max-height: 70vh;
  overflow-y: auto;
}


/* 加载状态样式 */
.variety-loading,
.picker-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
}

/* 选择器通用样式 */
.t-picker__content {
  --td-picker-bg-color: #fff;
}

.t-popup__content {
  background: #fff;
}

/* 表单项样式优化 */
.temp-stall-form .t-input {
  margin-bottom: 20rpx;
}

.temp-stall-form .t-cell {
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.temp-stall-form .t-cell:last-child {
  border-bottom: none;
}

/* 必填项标识 */
.temp-stall-form .t-cell[required]::before,
.temp-stall-form .t-input[required]::before {
  content: '*';
  color: #e34d59;
  margin-right: 4rpx;
  font-weight: bold;
}


/* 响应式设计 */
@media (max-height: 600px) {
  .dialog-content {
    max-height: 60vh;
  }
}

/* 防止内容溢出 */
.temp-stall-form {
  -webkit-overflow-scrolling: touch;
}

.variety-dialog-content {
  padding: 0;
  max-height: 60vh;
  min-height: 40vh;
}

.variety-dialog-scroll {
  max-height: 50vh;
  overflow-y: auto;
  padding: 20rpx;
  -webkit-overflow-scrolling: touch;
}

.variety-dialog-option {
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.variety-dialog-option:last-child {
  border-bottom: none;
}

.variety-checkbox {
  --td-checkbox-icon-checked-color: #1989FA !important;
  width: 100%;
}

/* 加载状态 */
.variety-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  color: #999;
}

.no-variety-tip {
  text-align: center;
  color: #999;
  padding: 80rpx 0;
  font-size: 28rpx;
}

/* 三级联动区域选择器样式 */
.area-picker-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  background: #fff;
}

/* t-picker 组件样式覆盖 */
.t-picker__content {
  background: #fff;
  --td-picker-bg-color: #fff;
  --td-picker-title-color: #333;
}

.t-picker__header {
  border-bottom: 1px solid #eee;
  --td-picker-cancel-color: #666;
  --td-picker-confirm-color: #1989FA;
}

.t-picker__body {
  background: #fff;
}

.t-picker__column {
  background: #fff;
}

.t-picker__item {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.t-picker__item--active {
  color: #1989FA;
  font-weight: bold;
}


/* 新增临时采价点表单样式 */
.dialog-content {
  padding: 20rpx 0;
  max-height: 70vh;
  overflow-y: auto;
}

.temp-stall-form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.temp-stall-form .t-input {
  margin-bottom: 20rpx;
}

.temp-stall-form .t-cell {
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  --td-cell-title-color: #333 !important;
  --td-cell-note-color: #666 !important;
}

.temp-stall-form .t-cell:last-child {
  border-bottom: none;
}

/* 必填项标识 */
.temp-stall-form .t-cell[required]::before,
.temp-stall-form .t-input[required]::before {
  content: '*';
  color: #e34d59;
  margin-right: 4rpx;
  font-weight: bold;
}

/* 选择器加载状态 */
.picker-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  background: #fff;
}

/* t-dialog 全局样式覆盖 */
.t-dialog__body {
  padding: 0 !important;
}

.t-dialog__content {
  max-height: 70vh;
  overflow: hidden;
}

.t-dialog__header {
  --td-dialog-title-color: #333;
}

.t-dialog__footer {
  --td-dialog-confirm-color: #1989FA;
  --td-dialog-cancel-color: #666;
}

/* 确保 checkbox 样式正确 */
.variety-checkbox .t-checkbox {
  --td-checkbox-icon-checked-color: #1989FA !important;
  --td-checkbox-label-color: #333 !important;
}

.variety-checkbox .t-checkbox__label {
  font-size: 30rpx;
  line-height: 1.5;
}

/* 滚动条样式优化 */
.variety-dialog-scroll::-webkit-scrollbar {
  width: 6rpx;
}

.variety-dialog-scroll::-webkit-scrollbar-thumb {
  background-color: #ddd;
  border-radius: 3rpx;
}

.variety-dialog-scroll::-webkit-scrollbar-track {
  background-color: #f5f5f5;
  border-radius: 3rpx;
}


/* 修复可能的布局问题 */
.t-popup__content {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 主题色统一 */
:root {
  --primary-color: #1989FA;
  --text-color: #333;
  --text-color-secondary: #666;
  --text-color-placeholder: #999;
  --border-color: #eee;
  --border-color-light: #f0f0f0;
  --bg-color: #fff;
  --bg-color-light: #f5f5f5;
}